@* Modern Card Component for DatNet Workout Tracker *@

<div class="modern-card @CssClass @GetCardVariantClass()" style="@Style">
    @if (!string.IsNullOrEmpty(Title) || !string.IsNullOrEmpty(Subtitle) || HeaderTemplate != null)
    {
        <div class="modern-card-header">
            @if (HeaderTemplate != null)
            {
                @HeaderTemplate
            }
            else
            {
                <div class="card-header-content">
                    @if (!string.IsNullOrEmpty(Icon))
                    {
                        <div class="card-icon">
                            <span class="oi oi-@Icon"></span>
                        </div>
                    }
                    <div class="card-titles">
                        @if (!string.IsNullOrEmpty(Title))
                        {
                            <h3 class="card-title">@Title</h3>
                        }
                        @if (!string.IsNullOrEmpty(Subtitle))
                        {
                            <p class="card-subtitle">@Subtitle</p>
                        }
                    </div>
                    @if (ActionTemplate != null)
                    {
                        <div class="card-actions">
                            @ActionTemplate
                        </div>
                    }
                </div>
            }
        </div>
    }

    <div class="modern-card-body @(NoPadding ? "no-padding" : "")">
        @ChildContent
    </div>

    @if (FooterTemplate != null)
    {
        <div class="modern-card-footer">
            @FooterTemplate
        </div>
    }
</div>

<style>
    .modern-card {
        background: var(--card-bg);
        border-radius: var(--radius-xl);
        box-shadow: var(--card-shadow);
        border: 1px solid var(--border);
        transition: all var(--transition-normal);
        overflow: hidden;
        height: 100%;
        display: flex;
        flex-direction: column;
    }

    .modern-card:hover {
        box-shadow: var(--card-shadow-hover);
        transform: translateY(-2px);
    }

    .modern-card.no-hover:hover {
        transform: none;
        box-shadow: var(--card-shadow);
    }

    .modern-card.elevated {
        box-shadow: var(--card-shadow-lg);
    }

    .modern-card.elevated:hover {
        transform: translateY(-4px);
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
    }

    .modern-card.glass {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    [data-theme="dark"] .modern-card.glass {
        background: rgba(0, 0, 0, 0.2);
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .modern-card.gradient-primary {
        background: var(--gradient-primary);
        color: white;
        border: none;
    }

    .modern-card.gradient-secondary {
        background: var(--gradient-secondary);
        color: white;
        border: none;
    }

    .modern-card.gradient-accent {
        background: var(--gradient-accent);
        color: white;
        border: none;
    }

    .modern-card-header {
        padding: var(--space-6) var(--space-6) var(--space-4);
        border-bottom: 1px solid var(--border-subtle);
    }

    .modern-card.gradient-primary .modern-card-header,
    .modern-card.gradient-secondary .modern-card-header,
    .modern-card.gradient-accent .modern-card-header {
        border-bottom-color: rgba(255, 255, 255, 0.2);
    }

    .card-header-content {
        display: flex;
        align-items: flex-start;
        gap: var(--space-4);
    }

    .card-icon {
        width: 48px;
        height: 48px;
        background: var(--gradient-primary);
        border-radius: var(--radius-lg);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: var(--font-size-lg);
        flex-shrink: 0;
    }

    .modern-card.gradient-primary .card-icon,
    .modern-card.gradient-secondary .card-icon,
    .modern-card.gradient-accent .card-icon {
        background: rgba(255, 255, 255, 0.2);
        color: white;
    }

    .card-titles {
        flex: 1;
    }

    .card-title {
        font-size: var(--font-size-xl);
        font-weight: 700;
        color: var(--text-primary);
        margin: 0 0 var(--space-1) 0;
        line-height: 1.2;
    }

    .modern-card.gradient-primary .card-title,
    .modern-card.gradient-secondary .card-title,
    .modern-card.gradient-accent .card-title {
        color: white;
    }

    .card-subtitle {
        font-size: var(--font-size-base);
        color: var(--text-secondary);
        margin: 0;
        font-weight: 500;
    }

    .modern-card.gradient-primary .card-subtitle,
    .modern-card.gradient-secondary .card-subtitle,
    .modern-card.gradient-accent .card-subtitle {
        color: rgba(255, 255, 255, 0.8);
    }

    .card-actions {
        flex-shrink: 0;
    }

    .modern-card-body {
        padding: var(--space-6);
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .modern-card-body.no-padding {
        padding: 0;
    }

    .modern-card-footer {
        padding: var(--space-4) var(--space-6) var(--space-6);
        border-top: 1px solid var(--border-subtle);
        margin-top: auto;
    }

    .modern-card.gradient-primary .modern-card-footer,
    .modern-card.gradient-secondary .modern-card-footer,
    .modern-card.gradient-accent .modern-card-footer {
        border-top-color: rgba(255, 255, 255, 0.2);
    }

    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .modern-card-header {
            padding: var(--space-4) var(--space-4) var(--space-3);
        }

        .modern-card-body {
            padding: var(--space-4);
        }

        .modern-card-footer {
            padding: var(--space-3) var(--space-4) var(--space-4);
        }

        .card-header-content {
            flex-direction: column;
            gap: var(--space-3);
        }

        .card-icon {
            width: 40px;
            height: 40px;
            font-size: var(--font-size-base);
        }

        .card-title {
            font-size: var(--font-size-lg);
        }
    }
</style>

@code {
    [Parameter] public string? Title { get; set; }
    [Parameter] public string? Subtitle { get; set; }
    [Parameter] public string? Icon { get; set; }
    [Parameter] public string CssClass { get; set; } = "";
    [Parameter] public string Style { get; set; } = "";
    [Parameter] public CardVariant Variant { get; set; } = CardVariant.Default;
    [Parameter] public bool NoPadding { get; set; } = false;
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public RenderFragment? HeaderTemplate { get; set; }
    [Parameter] public RenderFragment? ActionTemplate { get; set; }
    [Parameter] public RenderFragment? FooterTemplate { get; set; }

    private string GetCardVariantClass()
    {
        return Variant switch
        {
            CardVariant.Elevated => "elevated",
            CardVariant.Glass => "glass",
            CardVariant.GradientPrimary => "gradient-primary",
            CardVariant.GradientSecondary => "gradient-secondary",
            CardVariant.GradientAccent => "gradient-accent",
            CardVariant.NoHover => "no-hover",
            _ => ""
        };
    }
}

@code {
    public enum CardVariant
    {
        Default,
        Elevated,
        Glass,
        GradientPrimary,
        GradientSecondary,
        GradientAccent,
        NoHover
    }
}
