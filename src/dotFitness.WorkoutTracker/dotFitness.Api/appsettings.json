{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "MongoDB": "mongodb://admin:password@localhost:27017/dotFitnessDb?authSource=admin",
    "PostgreSQL": "Host=localhost;Database=dotFitnessDb;Username=postgres;Password=password;Port=5432"
  },
  "AdminSettings": {
    "AdminEmails": [
      "admin@dotfitness.com"
    ]
  },
  "JwtSettings": {
    "SecretKey": "YourSuperSecretKeyThatShouldBeAtLeast256BitsLongForJWTTokenSigningAndValidation123456789012345678901234567890",
    "Issuer": "dotFitness.Api",
    "Audience": "dotFitness.Client",
    "ExpirationInHours": 24
  },
  "GoogleOAuth": {
    "ClientId": "your-google-client-id",
    "ClientSecret": "your-google-client-secret",
    "RedirectUri": "https://localhost:7001/swagger/oauth2-redirect.html"
  },
  "CorsSettings": {
    "AllowedOrigins": [
      "http://localhost:5173",
      "http://localhost:3000",
      "http://localhost:5050",
      "https://localhost:5173",
      "https://localhost:3000",
      "https://localhost:5050"
    ]
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "Enrich": ["FromLogContext"],
    "Properties": {
      "Application": "dotFitness.Api"
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ]
  }
}
